@page "/counter"
@rendermode InteractiveServer /* Habilita la representación interactiva del servidor para el componente */

<PageTitle>Contador</PageTitle>

<h1>Counter</h1>

<p role="status">Recuento actual: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Incrementar contador</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;


    private void IncrementCount(MouseEventArgs e)
    {
        if (e.CtrlKey) // Ctrl key pressed as well
        {
	        currentCount += 5;
        }
        else
        {
            currentCount += IncrementAmount;
        }
    }
}
